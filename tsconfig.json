{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@Src/*": ["src/*"],
      "@Users/*": ["src/api/user/*"],
      "@Auth/*": ["src/auth/*"],
      "@Author/*": ["src/api/author/*"],
      "@Genre/*": ["src/api/genre/*"],
      "@Book/*": ["src/api/book/*"],
      "@List/*": ["src/api/lists/*"],
      "@Like/*": ["src/api/like/*"],
      "@Follow/*": ["src/api/follow/*"],
      "@Common/*": ["src/api/common/*"],
    }
  },
  "exclude": ["node_modules", "dist", "upload"]
}
